                        android:textColor="#CCCCCC"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Add more robot boxes as needed -->
        </LinearLayout>
    </HorizontalScrollView>
    <!-- Vertical Scrollable Task List -->
    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_robot_tasks"
        tools:ignore="ExtraText">

        <LinearLayout
            android:id="@+id/task_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_medium"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Task 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/gray_dark"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/gray_dark"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task: Deliver Supplies"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Robot: Robot #3"
                        android:textColor="#CCCCCC"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Progress: 30%"
                        android:textColor="#CCCCCC"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Image at bottom-right without expanding the layout -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Robot Icon"
                    android:src="@drawable/ic_home" />
            </LinearLayout>

            <!-- Task 2 -->
