<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginEnd="8dp"
    android:background="@color/gray_medium"
    android:clickable="true"
    android:focusable="true">

<TextView
android:id="@+id/robot_name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Robot #1"
android:textSize="20sp"
android:textStyle="bold"
android:textColor="@color/white" />

<TextView
android:id="@+id/robot_ping"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:text="Ping: 35ms"
android:textSize="16sp"
android:textColor="@color/gray_high_contrast" />

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="8dp"
android:gravity="center_vertical">

<ImageView
    android:id="@+id/robot_battery_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_battery"
    android:contentDescription="Battery Icon"
    android:layout_marginEnd="8dp" />

<TextView
    android:id="@+id/robot_battery"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Battery: 47%"
    android:textSize="16sp"
    android:textColor="@color/gray_high_contrast" />
</LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="8dp"
android:gravity="center_vertical">

<ImageView
    android:id="@+id/robot_task_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_navigation"
    android:contentDescription="Task Icon"
    android:layout_marginEnd="8dp" />

<TextView
    android:id="@+id/robot_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Task: Moving"
    android:textSize="16sp"
    android:textColor="@color/gray_high_contrast" />
</LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="8dp"
android:gravity="center_vertical">

<ImageView
    android:id="@+id/robot_location_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_location"
    android:contentDescription="Location Icon"
    android:layout_marginEnd="8dp" />

<TextView
    android:id="@+id/robot_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Location: Right Atrium"
    android:textSize="16sp"
    android:textColor="@color/gray_high_contrast" />
</LinearLayout>
    </LinearLayout>
