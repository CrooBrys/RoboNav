<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Robot"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/robot_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pre-existing Location (Optional)"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/pre_existing_location_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Coordinates (Optional)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/input_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Latitude, Longitude"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_set_initial_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Initial Position" />
</LinearLayout>
