<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Ensure background is defined -->

    <!-- Text: Select Robot -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_robot"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="@color/high_contrast_white" /> <!-- Use high contrast color -->

    <!-- Robot Selection Dropdown -->
    <Spinner
        android:id="@+id/robot_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:minHeight="48dp" />

    <!-- Location Name Input Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_name"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="@color/high_contrast_white" /> <!-- Use high contrast color -->

    <EditText
        android:id="@+id/input_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:hint="@string/enter_location_name"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/high_contrast_gray"
        android:paddingHorizontal="32dp"
        android:layout_gravity="center_horizontal" />

    <!-- Save Location Button -->
    <Button
        android:id="@+id/btn_save_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_location"
        android:backgroundTint="@color/blue_dark"
        android:textColor="@color/high_contrast_white"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="32dp" />

</LinearLayout>
