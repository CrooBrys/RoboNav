<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/gray_medium"> <!-- Added black background -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_location"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:textColor="@android:color/white" /> <!-- White text -->

    <Spinner
        android:id="@+id/location_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:minHeight="48dp" /> <!-- White background -->

    <Button
        android:id="@+id/btn_get_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_coordinates"
        android:backgroundTint="@color/blue_dark"
        android:textColor="@android:color/white"
        android:paddingHorizontal="32dp"
        android:layout_gravity="center_horizontal" />


    <!-- White text -->
</LinearLayout>
