<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginEnd="8dp"
    android:background="@color/gray_medium"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/robot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/robot_ping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_high_contrast"
        android:textSize="16sp" />

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="8dp"
android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

<ImageView
    android:id="@+id/robot_battery_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_battery"
    android:contentDescription="@string/battery_icon"
    android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/robot_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_high_contrast"
        android:textSize="16sp" />
</LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="8dp"
android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

<ImageView
    android:id="@+id/robot_task_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:importantForAccessibility="no"
    android:src="@drawable/ic_task"
    android:layout_marginEnd="8dp" />

<TextView
    android:id="@+id/robot_task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="@color/gray_high_contrast" />
</LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="8dp"
android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

<ImageView
    android:id="@+id/robot_location_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:importantForAccessibility="no"
    android:src="@drawable/ic_location"
    android:layout_marginEnd="8dp" />

<TextView
    android:id="@+id/robot_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:textColor="@color/gray_high_contrast" />
</LinearLayout>
    </LinearLayout>
