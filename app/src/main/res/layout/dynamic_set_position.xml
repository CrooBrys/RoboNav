<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Text: Select Robot -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Robot"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <!-- Spinner: Robot Dropdown -->
    <Spinner
        android:id="@+id/robot_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:minHeight="48dp" />

    <!-- Text: Select Pre-existing Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pre-existing Location (Optional)"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white" />

    <!-- Spinner: Pre-existing Location Dropdown -->
    <Spinner
        android:id="@+id/pre_existing_location_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:minHeight="48dp" />

    <!-- Text: Enter Coordinates -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Coordinates (Optional)"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white" />

    <!-- EditText: Coordinates Input -->
    <EditText
        android:id="@+id/input_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Latitude, Longitude"
        android:textColorHint="@color/gray_high_contrast"
        android:textColor="@android:color/white"
        android:minHeight="48dp" />

    <!-- Button: Set Initial Position -->
    <Button
        android:id="@+id/btn_set_initial_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Initial Position"
        android:backgroundTint="@color/blue_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
