<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->

    <!-- Robot Dropdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Robot"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/robot_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:minHeight="48dp" />

    <!-- Robot Location Information -->
    <TextView
        android:id="@+id/robot_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Location Name: "
        android:textSize="16sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/robot_location_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Coordinates: "
        android:textSize="16sp"
        android:textColor="@android:color/white" />

    <!-- Check Position Button -->
    <Button
        android:id="@+id/btn_check_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Position"
        android:backgroundTint="@color/blue_dark" />
</LinearLayout>
